<!doctype html>
<html lang="en">
  <head>
    <title>Info Page</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.1/dist/bootstrap-table.min.css">
    <link href="/your-path-to-fontawesome/css/all.css" rel="stylesheet">
      <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/bootstrap-table@1.18.1/dist/bootstrap-table.min.js"></script>


  </head>
  <body>
    <nav class="navbar navbar-expand-sm fixed-top navbar-dark bg-dark">
      <div class="container-fluid">
        <b><a class="navbar-brand text-white">Restaurants</a></b>
        <span class="navbar-text">
          Showing <%= TotalNumber%> documents (criteria: {})
        </span>
        <div class="d-flex">
              <div class="text-white me-2">
                <div class="mx-auto">
                  Hi! <%= UserName %>! <a href="logout">Logout</a>
                </div>
              </div>
        </div>
      </div>      
    </nav>  
    
    <br>
    <br>
    <br>


    <div class="container shadow p-3 mb-5 bg-white rounded">
      

      <h2>Restaurants Documents</h2>
      <hr />

      <div id="toolbar">
        <a id="createNewDoc" class="btn btn-primary" href="/newDoc">
          <i class="far fa-plus-square"></i> Add
        </a>
      </div>

      <table 
      id="table" 
      data-toolbar="#toolbar">
        <thead>
          <tr>
            <th data-field="name">Restaurants Name</th>
            <th data-field="option" data-formatter="optionFormatter" data-width="350"></th>
          </tr>
        </thead>
      </table>
    </div>
    <input type="text" id="docJSON" value="<%= docJSON%>" hidden>  
    <input type="hidden" id="userID" value="<%= userID%>" />
    <script>

      $( document ).ready(function() {
        $("#table").bootstrapTable({

          data: JSON.parse($("#docJSON").val())

        })
      });
       
      function optionFormatter(value, row, index) {

        let aboutToJoin = []
        const userID = $("#userID").val();
        const ownerID = row.owner;
        aboutToJoin.push(
              '<div class="row justify-content-md-center">'
                );
        aboutToJoin.push(
              '<div class="col-auto">',
              '<a class="btn btn-danger Rate" href="/Rate?restaurant=' + row._id + '" title="Rate">',
                '<i class="fab fa-gratipay"></i> Rate',
              '</a>',
              '</div>');
        if(ownerID == userID){
            aboutToJoin.push(
              '<div class="col-auto">',
              '<a class="btn btn-info edit" href="/Edit?restaurant=' + row._id + '" title="edit">',
                '<i class="fas fa-edit"></i> Edit',
              '</a>',
              '</div>',
              '<div class="col-auto">',
              '<a class="btn btn-warning remove" href="/Delete?restaurant=' + row._id + '" title="Remove">',
                '<i class="fa fa-trash"></i> Remove',
              '</a>',
              '</div>');
        }
        aboutToJoin.push(
              '</div>'
                );

        return aboutToJoin.join('')
      }
    </script>
  </body>
</html>